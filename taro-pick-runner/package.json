{
  "name": "taro-pick-runner",
  "displayName": "TaroPickRunner",
  "description": "vscode pick runner extension for taro",
  "version": "0.0.1",
  "publisher": "curtis-liong",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:taro-pick-runner.helloWorld",
    "onCommand:taro-pick-runner.showTime",
    "onView:pickView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "taro-pick-runner.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "taro-pick-runner.showTime",
        "title": "Taro Pick Runner Show Time"
      },
      {
        "command": "taro-pick-runner.updateConfig",
        "title": "Update result config",
        "icon": "resources/dark/dependency.svg"
      },
      {
        "command": "taro-pick-runner.refreshConfig",
        "title": "Refresh result config",
        "icon": "resources/dark/refresh.svg"
      },
      {
        "command": "taro-pick-runner.recoverOriginConfigFile",
        "title": "Recover origin config file",
        "icon": "resources/dark/folder.svg"
      },
      {
        "command": "pickView.pick",
        "title": "选择",
        "icon": "resources/dark/edit.svg"
      },
      {
        "command": "pickView.unPick",
        "title": "取消选择",
        "icon": "resources/light/edit.svg"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "pickView",
          "name": "Taro Pick Runner"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "taro-pick-runner.refreshConfig",
          "title": "刷新配置",
          "group": "navigation"
        },
        {
          "command": "taro-pick-runner.updateConfig",
          "title": "更新配置",
          "group": "navigation"
        },
        {
          "command": "taro-pick-runner.recoverOriginConfigFile",
          "title": "还原原始配置文件",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pickView.pick",
          "when": "view == pickView && viewItem == treeItemPageUnPicked",
          "group": "inline"
        },
        {
          "command": "pickView.unPick",
          "when": "view == pickView && viewItem == treeItemPagePicked",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.2",
    "@types/babel__standalone": "^7.1.3",
    "@types/babel__traverse": "^7.11.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@babel/core": "^7.13.8",
    "@babel/generator": "^7.13.9",
    "@babel/parser": "^7.13.9",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/standalone": "^7.13.9",
    "@babel/traverse": "^7.13.9",
    "@babel/types": "^7.13.9",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "jsonc-parser": "^3.0.0"
  }
}
